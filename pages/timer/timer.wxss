/* 按钮  */
.okBtn,.pauseBtn,.continueBtn,.cancelBtn{
   width: 250rpx;
   height: 60rpx;
   line-height: 60rpx;
   text-align: center;
   color: #fff;
   border: 3rpx solid #fff;
   border-radius: 20rpx;
   margin:0 auto 20rpx auto ;
}



