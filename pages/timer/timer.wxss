/**index.wxss**/

.task{
  height:60%;
  margin:70rpx auto;
  text-align: center;
}
.task-title{
  font-size: 35rpx;
  height: 70rpx;
  line-height:70rpx;
}
.task-detail{
  font-size: 30rpx;
  height: 50rpx;
  line-height:50rpx;
  color: #999;
}


.start{ 
  margin: 160rpx auto;
  width: 180rpx;
  height: 180rpx;
  border:2rpx solid #E7624f;
  border-radius: 50%;
  text-align: center;
  line-height: 180rpx;
}
page{
  height: 100%;
}
/* 时钟页面 */
.clock{
  height: 100%;
  background-color: #E7624f;
  overflow: hidden;
}

.progress{
  width: 400rpx;
  height: 400rpx;
  margin: 140rpx auto;
  position: relative;
}

.progress-bg,.progress-active{
  width: 400px;
  height: 400rpx;
  position: absolute;
  left: 0;
  text-align:center;
  top: 0;
}
.progress-text{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 50rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  left:50%;
  top:50%;
  margin-left: -80rpx;
  margin-top: -30rpx;
}

