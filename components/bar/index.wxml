<!--index.wxml-->

<view style="position: relative; height: 100%;display: flex;flex-direction: column;">
  <view style="flex-grow: 0; font-size: 0.7em;" bindtap="test">
    专注时长分布 {{today||"1970-01-01"}}
  </view>
  <view style="flex-grow: 1; position: relative">
    <view wx:if="{{!change}}" class="full-screen-container">
      <ec-canvas id="mychart-dom-bar" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
    </view>
  </view>
</view>